{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "backend/server.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/config/**",
          "backend/controllers/**",
          "backend/routes/**",
          "backend/models/**",
          "backend/templates/**",
          "backend/utils/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
