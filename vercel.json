{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**/*"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "/backend/server.cjs"
    },
    {
      "src": "/health",
      "dest": "/backend/server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}
